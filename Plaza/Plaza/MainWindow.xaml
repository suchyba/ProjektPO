<Window x:Class="Plaza.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Plaza"
        mc:Ignorable="d"
        Title="Rozgrywki" Height="450" Width="800" Loaded="Window_Loaded">
    <Window.Resources>
        <CollectionViewSource x:Key="bazaDruzynViewSource" d:DesignSource="{d:DesignInstance {x:Type local:BazaDanych}, CreateList=True}"/>
        <CollectionViewSource x:Key="druzynaViewSource" d:DesignSource="{d:DesignInstance {x:Type local:Druzyna}, CreateList=True}"/>
    </Window.Resources>
    <Grid DataContext="{StaticResource bazaDruzynViewSource}">
        <Button x:Name="ZatwierdzButt" Content="Dodaj" HorizontalAlignment="Left" Margin="80,325,0,0" VerticalAlignment="Top" Width="75" Click="ZatwierdzButt_Click"/>
        <TextBox x:Name="NazwaDruzynyTxtBox" HorizontalAlignment="Left" Height="23" Margin="80,57,0,0" TextWrapping="Wrap" Text="Nazwa" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="RokPowstaniaTxtBox" HorizontalAlignment="Left" Height="23" Margin="80,108,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Text="2019"/>
        <TextBox x:Name="OpisTxtBox" HorizontalAlignment="Left" Height="23" Margin="80,162,0,0" TextWrapping="Wrap" Text="Opis" VerticalAlignment="Top" Width="120" SpellCheck.IsEnabled="True" AcceptsReturn="True"/>
        <Button x:Name="OdswiezButt" Content="Odśwież" HorizontalAlignment="Left" Margin="314,325,0,0" VerticalAlignment="Top" Width="75" Click="OdswiezButt_Click"/>
        <Button x:Name="UsunButt" Content="Usuń" HorizontalAlignment="Left" Margin="197,325,0,0" VerticalAlignment="Top" Width="75" Click="UsunButt_Click"/>
        <Button x:Name="MeczeButt" Content="Mecze" HorizontalAlignment="Left" Margin="80,369,0,0" VerticalAlignment="Top" Width="75" Click="MeczeButt_Click"/>
        <DataGrid x:Name="DruzynyDataGrid" Margin="223,44,30,120" ItemsSource="{Binding Source={StaticResource druzynaViewSource}}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Nazwa}" ClipboardContentBinding="{x:Null}"/>
                <DataGridTextColumn Binding="{Binding Punkty}" ClipboardContentBinding="{x:Null}"/>
                <DataGridTextColumn Binding="{Binding RokPowstania}" ClipboardContentBinding="{x:Null}"/>
                <DataGridTextColumn Binding="{Binding Opis}" ClipboardContentBinding="{x:Null}" Width="400" IsReadOnly="True" MaxWidth="400"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
